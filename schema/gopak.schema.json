{
  "$id": "https://raw.githubusercontent.com/gopak/gopak-cli/HEAD/schema/gopak.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gopak configuration",
  "type": "object",
  "properties": {
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "name": { "type": "string" },
          "get_installed_version": { "$ref": "#/definitions/command" },
          "get_latest_version": { "$ref": "#/definitions/command" },
          "install": { "$ref": "#/definitions/command" },
          "pre_update": { "$ref": "#/definitions/command" },
          "update": { "$ref": "#/definitions/command" },
          "remove": { "$ref": "#/definitions/command" },
          "search": { "$ref": "#/definitions/command" }
        },
        "required": ["type", "name"],
        "additionalProperties": false
      }
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "source": { "type": "string" },
          "depends_on": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["name", "source"],
        "additionalProperties": false
      }
    },
    "custom_packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "depends_on": {
            "type": "array",
            "items": { "type": "string" }
          },
          "get_installed_version": { "$ref": "#/definitions/command" },
          "get_latest_version": { "$ref": "#/definitions/command" },
          "install": { "$ref": "#/definitions/command" },
          "update": { "$ref": "#/definitions/command" },
          "remove": { "$ref": "#/definitions/command" }
        },
        "required": ["name"],
        "additionalProperties": false
      }
    },
    "github_release_packages": {
      "type": "array",
      "items": { "$ref": "#/definitions/github_release_package" }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "github_release_package": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "repo": { "type": "string" },
        "asset_pattern": { "type": "string" },
        "depends_on": {
          "type": "array",
          "items": { "type": "string" }
        },
        "get_installed_version": { "$ref": "#/definitions/command" },
        "post_install": { "$ref": "#/definitions/command" },
        "remove": { "$ref": "#/definitions/command" }
      },
      "required": ["name", "repo", "asset_pattern"],
      "additionalProperties": false
    },
    "command": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "command": { "type": "string" },
            "require_root": { "type": "boolean", "default": false }
          },
          "required": ["command"],
          "additionalProperties": false
        }
      ]
    }
  }
}
